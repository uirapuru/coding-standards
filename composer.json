{
    "name": "futurenet/coding-standards",
    "authors": [
        {
            "name": "Grzegorz Kaszuba",
            "email": "uirapuruadg@gmail.com"
        }
    ],
    "require": {
        "friendsofphp/php-cs-fixer": "^2.4",
        "phpmd/phpmd": "^2.6"
    },
    "scripts" : {
        "phpmd": [
            "php bin/phpmd src/ text phpmd.xml"
        ],
        "phpcsfixer-dry": [
            "php bin/php-cs-fixer fix ./src --dry-run --diff"
        ],
        "phpcsfixer": [
            "php bin/php-cs-fixer fix ./src"
        ]
    },
    "config" : {
        "bin-dir" : "bin"
    }
}
